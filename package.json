{
  "name": "vscode-opencode-gui-plugin",
  "publisher": "poleNgrek",
  "repository": "https://github.com/poleNgrek/vscode-opencode-gui-plugin",
  "displayName": "OpenCode Sidebar UI",
  "description": "AI coding assistant powered by opencode CLI",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opencode",
          "title": "OpenCode",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "opencode": [
        {
          "type": "webview",
          "id": "opencode.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "opencode.newSession",
        "title": "OpenCode: New Session"
      },
      {
        "command": "opencode.addCurrentFile",
        "title": "OpenCode: Add Current File to Context"
      },
      {
        "command": "opencode.focus",
        "title": "OpenCode: Focus Chat"
      }
    ],
    "keybindings": [
      {
        "command": "opencode.focus",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      }
    ],
    "configuration": {
      "title": "OpenCode",
      "properties": {
        "opencode.cliPath": {
          "type": "string",
          "default": "opencode",
          "description": "Path to the opencode CLI binary."
        },
        "opencode.serverUrl": {
          "type": "string",
          "default": "",
          "description": "Explicit opencode server URL (e.g. http://localhost:4096). If set, the plugin will connect directly without probing or spawning."
        },
        "opencode.port": {
          "type": "number",
          "default": 4096,
          "description": "Port to use when probing for or spawning the opencode server."
        },
        "opencode.probePorts": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [],
          "description": "Extra ports to probe when looking for a running opencode server (e.g. [63127, 4097])."
        },
        "opencode.model": {
          "type": "string",
          "default": "",
          "description": "Model override passed to opencode (e.g. anthropic/claude-sonnet-4-5)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.2.11"
  }
}